worker_processes  1;

http {
	include				mime.types;
	charset				utf-8;
	sendfile			on;
	server	{
		listen			127.0.0.1:80;
	location / {
		root					/usr/share/nginx/hmtl/load;	
		autoindex 				on;
		autoindex_exact_size	off;
		autoindex_format		html;
		autoindex_localtime		on;
		}
	location /home/user {
		auth_basic				"Administrator's Area";
		auth_basic_user_file	/etc/apache2/.htpasswd;
		}
	location /home/ip_deny {
		deny			all;
		}
	}
}